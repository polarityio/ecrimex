<h1 class="p-title">{{fa-icon icon="globe" fixedWidth=true}}
  {{#if (eq details.source "phish")}}
    Phish Information
  {{else}}
    Malicious Domain Information
  {{/if}}
</h1>

{{#if (eq details.source "maliciousDomain")}}
  <div>
    <span class="p-key">Classification:</span>
    <span class="p-value">
      {{#if (gt details.classification.length 0)}}
        {{details.classification}}
      {{else}}
        <span class="p-footnote">Not Classified</span>
      {{/if}}
    </span>
  </div>
{{/if}}

{{#if details.brand}}
  <div>
    <span class="p-key">Brand:</span>
    <span class="p-value">{{details.brand}}</span>
  </div>
{{/if}}

<div>
  <span class="p-key">Confidence:</span>
  <span class="p-value">{{details.confidence}}</span>
</div>
<div>
  <span class="p-key">Status:</span>
  <span class="p-value">{{details.status}}</span>
</div>
<div>
  <span class="p-key">Discovered At:</span>
  <span class="p-value">
    {{moment-format
      (unix details.discoveredAt)
      "MM/DD/YYYY HH:mm:ss"
      timeZone=timezone
    }}
  </span>
</div>
<div>
  <span class="p-key">Created At:</span>
  <span class="p-value">
    {{moment-format
      (unix details.createdAt)
      "MM/DD/YYYY HH:mm:ss"
      timeZone=timezone
    }}
  </span>
</div>
<div>
  <span class="p-key">Updated At:</span>
  <span class="p-value">
    {{moment-format
      (unix details.updatedAt)
      "MM/DD/YYYY HH:mm:ss"
      timeZone=timezone
    }}
  </span>
</div>
<div>
  <span class="p-key">Submission Count:</span>
  <span class="p-value">{{details.metadata.submissionCount}}</span>
</div>
{{#if (gt details.notes.length 0)}}
  <div class="note-container">
    <h1 class="p-title">{{fa-icon icon="sticky-note" fixedWidth=true}} Notes</h1>
    {{#each details.notes as | note | }}
      <div class="note">
        <div class="note-description">{{note.description}}</div>
        <div class="note-created p-footnote">
          {{moment-format
            (unix note.createdAt)
            "MM/DD/YYYY HH:mm:ss"
            timeZone=timezone
         }}
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}

{{#if (gt details.ip.length 0)}}
  <h1 class="p-title">{{fa-icon icon="network-wired" fixedWidth=true}} IP</h1>
  {{#each details.ip as | ip |}}
    <span class="tag">{{ip}}</span>
  {{/each}}
{{/if}}

{{#if (gt details.asn.length 0)}}
  <h1 class="p-title">{{fa-icon icon="globe" fixedWidth=true}} ASN</h1>
  {{#each details.asn as | asn |}}
    <span class="tag">{{asn}}</span>
  {{/each}}
{{/if}}
